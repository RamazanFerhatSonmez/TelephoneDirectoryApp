@model TelephoneDirectoryApp.Models.ContactInfo

@{
    ViewData["Title"] = "Create Contact Info";
}

<h1>CreateContact</h1>

<h4>Contac tInfo</h4>
<h5>@ViewBag.Mgs</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateContact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="type" class="control-label"></label>
                <select class="form-control" asp-for="type">
                    <option>Please select one</option>
                    <option value="tel">Telefon</option>
                    <option value="mail">Mail</option>
                    <option value="konum">Konum</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
