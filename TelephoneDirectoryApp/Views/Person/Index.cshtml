@model IEnumerable<TelephoneDirectoryApp.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<hr />
<h5>@ViewBag.Mgs</h5>
<p>
    <a asp-action="Create">Create New Person</a>
    <hr />
    <a asp-action="GeneratedReports">Generated Reports</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.UUID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.UUID)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.UUID }) |
                @Html.ActionLink("Add Contact Info", "CreateContact", new { id = item.UUID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UUID }) |
                @Html.ActionLink("Generate Report", "Report", new { id = item.UUID })
            </td>
        </tr>
}
    </tbody>
</table>
